                    <LinearLayout
                        android:id="@+id/ll_radio_parent"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginEnd="2dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:layout_marginStart="2dp"

                        android:layout_weight="6.5"
                        android:background="#BBDEFB"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <LinearLayout
                            android:id="@+id/ll_cash"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="#BBDEFB"
                            android:orientation="vertical">

                            <RadioButton
                                android:id="@+id/rb_cash"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Cash" />


                            <EditText
                                android:id="@+id/et_cash_rcvd_amt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:enabled="false"
                                android:singleLine="true"
                                android:maxLines="1"
                                android:inputType="numberDecimal"
                                android:hint="Rcvd Amt" />

                            <EditText
                                android:id="@+id/et_cash_rcvd"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:enabled="false"
                                android:hint="Rcvd Amt"
                                android:visibility="invisible" />


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_cheque"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="#BBDEFB"
                            android:orientation="vertical">


                            <RadioButton
                                android:id="@+id/rb_chq"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Cheque" />


                            <EditText
                                android:id="@+id/et_chq_no"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:enabled="false"
                                android:inputType="number"
                                android:maxLength="6"
                                android:hint="Cheque no." />

                            <EditText
                                android:id="@+id/et_chq_rcvd_amt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:enabled="false"
                                android:singleLine="true"
                                android:maxLines="1"
                                android:inputType="numberDecimal"
                                android:hint="Rcvd Amt" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_dd"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"

                            android:layout_weight="1"
                            android:background="#BBDEFB"
                            android:orientation="vertical">

                            <RadioButton
                                android:id="@+id/rb_dd"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="DD" />


                            <EditText
                                android:id="@+id/et_dd_no"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:enabled="false"
                                android:hint="DD no."
                                android:inputType="number"
                                android:maxLength="6"/>

                            <EditText
                                android:id="@+id/et_dd_rcvd_amt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:enabled="false"
                                android:singleLine="true"
                                android:maxLines="1"
                                android:inputType="numberDecimal"
                                android:hint="Rcvd Amt" />

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <!--/RadioGroup-->

