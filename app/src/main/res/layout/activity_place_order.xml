                        app:ms_arrowColor="#000000"
                        app:ms_arrowSize="16dp"
                        app:ms_baseColor="#666666"
                        app:ms_enableErrorLabel="false"
                        app:ms_enableFloatingLabel="false"
                        app:ms_errorColor="#453456"
                        app:ms_floatingLabelColor="#000000"
                        app:ms_floatingLabelText="Product"
                        app:ms_highlightColor="#000000"
                        app:ms_hint="Product"
                        app:ms_hintColor="#000000"
                        app:ms_multiline="false"
                        app:ms_thickness="0.5dp"
                        />
