<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="7"
    android:orientation="vertical"
    android:background="#E1F5FE"
    tools:context="com.innovation.neha.tracklocation.Activities.AddCustomerActivity">

    <TextView
        android:id="@+id/tv_cust_id"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="2dp"
        android:textSize="17sp"
        android:textColor="#000000"
        android:gravity="center"
        android:textStyle="bold"
        android:text=""
        />

    <EditText
        android:id="@+id/et_cust_name"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:hint="Customer Name"
        android:inputType="text"
        android:layout_margin="2dp"
        android:textSize="15sp"
        android:textColor="#000000"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/border">

        <fragment
            android:id="@+id/place_autocomplete_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"
            />
    </LinearLayout>
    <EditText
        android:id="@+id/et_cust_addr"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:hint="Customer Address"
        android:inputType="text"
        android:layout_margin="2dp"
        android:textSize="15sp"
        android:textColor="#000000"/>

    <EditText
        android:id="@+id/et_cust_contact"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:hint="Customer Contact"
        android:inputType="numberSigned"
        android:layout_margin="2dp"
        android:textSize="15sp"
        android:textColor="#000000"
        android:maxLength="10"
        />

    <EditText
        android:id="@+id/et_cust_gst"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:hint="GST Number"
        android:inputType="textCapCharacters"
        android:layout_margin="2dp"
        android:textSize="15sp"
        android:textColor="#000000"/>

    <EditText
        android:id="@+id/et_cust_pan"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:hint="PAN Number"
        android:inputType="textCapCharacters"
        android:maxLength="10"
        android:layout_margin="2dp"
        android:textSize="15sp"
        android:textColor="#000000"/>

    <Button
        android:id="@+id/btn_cust_submit"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Submit"
        android:textSize="20sp"
        android:background="#81D4FA"
        android:layout_margin="2dp" />





</LinearLayout>
